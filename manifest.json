{
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "wokitoki",
    "default_icon": "assets/images/logo-48.png",
    "__disabled__default_popup": "popup.html"
  },
  "commands": {
    "create-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Create popup",
      "global": true
    }
  },
  "icons": {
    "48": "assets/images/logo-48.png",
    "96": "assets/images/logo-96.png",
    "128": "assets/images/logo-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
